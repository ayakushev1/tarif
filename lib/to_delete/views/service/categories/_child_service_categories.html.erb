    child_service_category.level, 
    (child_service_category.type.name if child_service_category.type ), 
    (child_service_category.parent.name if child_service_category.parent), 
    child_service_category.path,
    child_service_category.parents.collect{|p| p.name}.join(', '), 
  ] 
  end
end
