  t.caption = 'Child service categories'
  t.heads = ['Id', 'Name', 'Level', 'Type', 'Parent', 'Path', 'Parents']
  t.base_name = 'child_service_category'
  t.set_fields do |child_service_category| 
  [
    child_service_category.id, 
