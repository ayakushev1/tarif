<%

form_item.init do |f|
  f.caption = "Calls generation params"
  f.action_on_submit = calls_generate_calls_path	
  f.set_fields do |filtr_name| 
    html_options = {:action_name => calls_set_calls_generation_params_path}
  [
  	[label(filtr_name, ""),
  	 link_to( 'Set default params', calls_set_default_calls_generation_params_path)
  	],
  	[label(filtr_name, ""),
  	 submit_tag("Generate calls")
  	],
  	[label(filtr_name, "country_id", "Страна"),
  	 collection_select(filtr_name, "country_id", Category.countries, :id, :name,  {:include_blank => true, :selected => session_filtr_params["country_id"] }, html_options )
  	],
  	[label(filtr_name, "region_id", "Регион"),
  	 collection_select(filtr_name, "region_id", Category.regions.with_parent(session_filtr_params["country_id"]), :id, :name, 
  	   {:include_blank => true, :selected => session_filtr_params["region_id"] }, html_options )
  	],   
  	[label(filtr_name, "operator_id", "Основной оператор"),
  	 collection_select(filtr_name, "operator_id", Category.operators, :id, :name, {:include_blank => true, :selected => session_filtr_params["operator_id"] }, html_options )
  	],   
  	[label(filtr_name, "privacy_id", "Физическое или юридическое лицо"),
  	 collection_select(filtr_name, "privacy_id", Category.privacy, :id, :name, 
  	   {:include_blank => true, :selected => session_filtr_params["privacy_id"] }, html_options )
  	],
  	[label(filtr_name, "number_of_day_calls", "Количество звонков в день"),
     text_field(filtr_name, "number_of_day_calls", html_options.merge({:type => 'range', :min => 0, :max => 100.0, :step => 0.1, :value => session_filtr_params["number_of_day_calls"] }) )+
  	 content_tag(:div, {:class => "input-append"}) { content_tag(:span, session_filtr_params["number_of_day_calls"], {:class => "add-on"}) }
  	],   
  	[label(filtr_name, "duration_of_calls", "Средняя продолжительность звонка, мин"),
     text_field(filtr_name, "duration_of_calls", html_options.merge({:type => 'range', :min => 0, :max => 60.0, :step => 0.1, :value => session_filtr_params["duration_of_calls"] }) )+
  	 content_tag(:div, {:class => "input-append"}) { content_tag(:span, session_filtr_params["duration_of_calls"], {:class => "add-on"}) }
  	],   
  	[label(filtr_name, "share_of_calls_to_other_mobile", "Доля звонков к другим операторам, %"),
     text_field(filtr_name, "share_of_calls_to_other_mobile", html_options.merge({:type => 'range', :min => 0, :max =>1.0, :step => 0.01, :value => session_filtr_params["share_of_calls_to_other_mobile"] }) )+
  	 content_tag(:div, {:class => "input-append"}) { content_tag(:span, number_to_percentage(session_filtr_params["share_of_calls_to_other_mobile"].to_f*100.0, :precision => 0), {:class => "add-on"}) }
  	],   
  	[label(filtr_name, "share_of_calls_to_fix_line", "Доля звонков на фиксированную линию, %"),
     text_field(filtr_name, "share_of_calls_to_fix_line", html_options.merge({:type => 'range', :min => 0, :max =>1.0, :step => 0.01, :value => session_filtr_params["share_of_calls_to_fix_line"] }) )+
  	 content_tag(:div, {:class => "input-append"}) { content_tag(:span, number_to_percentage(session_filtr_params["share_of_calls_to_fix_line"].to_f*100.0, :precision => 0), {:class => "add-on"}) }
  	],   
  	[label(filtr_name, "share_of_regional_calls", "Доля междугородних звонков, %"),
     text_field(filtr_name, "share_of_regional_calls", html_options.merge({:type => 'range', :min => 0, :max =>1.0, :step => 0.01, :value => session_filtr_params["share_of_regional_calls"] }) )+
  	 content_tag(:div, {:class => "input-append"}) { content_tag(:span, number_to_percentage(session_filtr_params["share_of_regional_calls"].to_f*100.0, :precision => 0), {:class => "add-on"}) }
  	],   
  	[label(filtr_name, "share_of_international_calls", "Доля международных звонков, %"),
     text_field(filtr_name, "share_of_international_calls",  html_options.merge({:type => 'range', :min => 0, :max =>1.0, :step => 0.01, :value => session_filtr_params["share_of_international_calls"] }) )+
  	 content_tag(:div, {:class => "input-append"}) { content_tag(:span, number_to_percentage(session_filtr_params["share_of_international_calls"].to_f*100.0, :precision => 0), {:class => "add-on"}) }
  	],   
  	[label(filtr_name, "number_of_sms_per_day", "Количество СМС, шт"),
     text_field(filtr_name, "number_of_sms_per_day", html_options.merge({:type => 'text', :value => session_filtr_params["number_of_sms_per_day"] }) )
  	],   
  	[label(filtr_name, "number_of_mms_per_day", "Количество ММС, шт"),
     text_field(filtr_name, "number_of_mms_per_day", html_options.merge({:type => 'text', :value => session_filtr_params["number_of_mms_per_day"] }) )
  	],   
  	[label(filtr_name, "internet_trafic_per_month", "Трафик интернета в месяц, Гб"),
     text_field(filtr_name, "internet_trafic_per_month", html_options.merge({:type => 'range', :min => 0, :max => 20.0, :step => 1, :value => session_filtr_params["internet_trafic_per_month"] }) )+
  	 content_tag(:div, {:class => "input-append"}) { content_tag(:span, session_filtr_params["internet_trafic_per_month"], {:class => "add-on"}) }
  	],   
  	[label(filtr_name, ""),
  	 submit_tag("Generate calls")
  	],
  ] 
  end
end
