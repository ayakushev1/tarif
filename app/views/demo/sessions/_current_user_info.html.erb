  msg = 'Войти'
else
  msg = 'Сменить пользователя'
end


%>

<div class="dropdown pull-right">
	<div class="">
		<a class="text-info" data-toggle="dropdown">
			Пользователь: <strong><%= controller.current_user.name %></strong>  <span class="caret"></span>
		</a>
		<ul class="dropdown-menu">
			<li><%= link_to msg, demo_login_path %></li>
			<li><%= link_to 'Выйти', demo_logout_path %></li>
		</ul>
	</div>
</div>
