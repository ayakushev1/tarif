<caption><%= table.caption %></caption>

<div>
	<%= will_paginate table.model, :class=>"pagination pagination-centered", :param_name => table.pagination_param_name %>
</div>

<table class="table table-hover table-bordered table-condensed">
  <thead>
    <tr>
      <% table.heads.each do |head| %>
        <th>
        	<%= head %>
        </th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% table.model.each do |item| %>
    <tr <%= table.raw_details(item) %>>
      <% table.fields(item) do |field| %>
        <td>
        	<%= field %>
        </td>
      <% end %>
    </tr>
    <% end %>  	
  </tbody>
</table>