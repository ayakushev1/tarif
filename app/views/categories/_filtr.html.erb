  	[label(filtr_name, "level_id", "Level"),
  	 collection_select(filtr_name, "level_id", CategoryLevel.type(session[:filtr][filtr_name]["type_id"]), :id, :name, 
  	   {:include_blank => true, :selected => session[:filtr][filtr_name]["level_id"] },
  	   {:filtr_name =>  filtr_name, :action_name => '/categories'} )
  	],
  ] 
  end
end
