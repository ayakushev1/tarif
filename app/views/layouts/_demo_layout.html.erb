		<div class="container">
			<%= render 'demo/sessions/current_user_info'%>
		</div>
	</div>
	
	<div class="navbar navbar-default nav-bottom" role="navigation">
		<div class="container">
	  		<%= render('/application/menus/operator_menu') %>
		</div>
	</div>
</div>	
<div class="col-xs-1"></div>

<div id="container" class="container">
	<% if current_user %>
		<div class="row">
			<div class="col-xs-12">
				<div class="col-xs-1"></div>
				<div class="col-xs-2">
					<h2>Основное меню</h2>
				</div>
				<div class="col-xs-8">
					<h2><%= yield(:title).blank? ? 'Title' : yield(:title) %></h2>
				</div>
				<div class="col-xs-1"></div>
			</div>
		</div>
	
		<div class="row">
			<div class="col-xs-1"></div>
			<div class="col-xs-2">
				<%= render('/application/menus/demo_menu') %>
				<%= render('/application/menus/user_menu') if current_user_admin? %>	
				<%= render('/application/shared/vk_community_vidget') %>
			</div>					
	
	        <div class="col-xs-8">
	        	<div id="main_block_top_row_4" class="content">
	        		<div><%= GC.stat if current_user_admin? and false %></div>
					<%= render('/application/shared/alerts') %>
					
					<div id=<%= view_id_name %> >
						  <%= yield %>
					</div>	  
	        	</div>
	        </div>
	        <div class="col-xs-1"></div>
		</div>
	<% else %>
		<div class="row">			
			<div class="col-xs-12">
				<div class="col-xs-1"></div>
				<h2><%= yield(:title).blank? ? 'Title' : yield(:title) %></h2>
				<div class="col-xs-1"></div>
			</div>
			<div class="col-xs-1"></div>
		</div>
	
		<div class="row">
			<div class="col-xs-1"></div>
	        <div class="col-xs-10">
	        	<div id="main_block_top_row_4" class="content">
					<%= render('/application/shared/alerts') %>
					
					<div id=<%= view_id_name %> >
						  <%= yield %>
					</div>	  
	        	</div>
	        </div>
			<div class="col-xs-1"></div>
		</div>
	<% end %>

</div>
