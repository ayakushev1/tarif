<div class="navbar navbar-inverse nav-top" role="navigation">
	<div class="container">
		<%= render 'demo/sessions/current_user_info'%>
	</div>
</div>

<div class="navbar navbar-default nav-bottom" role="navigation">
	<div class="container">
  		<%= render('/application/menus/operator_menu') %>
	</div>
</div>

<div id="container" class="container">
	<% if current_user %>
		<div class="row">
			<div class="col-xs-3">
				<h2>Основное меню</h2>
			</div>
			<div class="col-xs-9">
				<h2><%= yield(:title).blank? ? 'Title' : yield(:title) %></h2>
			</div>
		</div>
	
		<div class="row">
			<div class="col-xs-3">
				<%= render('/application/menus/demo_menu') %>
				<%= render('/application/menus/user_menu') if true or current_user_admin? %>	
			</div>					
	
	        <div class="col-xs-9 ">
	        	<div id="main_block_top_row_4" class="content">
					<%= render('/application/shared/alerts') %>
					
					<div id=<%= view_id_name %> >
						  <%= yield %>
					</div>	  
	        	</div>
	        </div>
		</div>
	<% else %>
		<div class="row">
			<div class="col-xs-12">
				<h2><%= yield(:title).blank? ? 'Title' : yield(:title) %></h2>
			</div>
		</div>
	
		<div class="row">
	        <div class="col-xs-12 ">
	        	<div id="main_block_top_row_4" class="content">
					<%= render('/application/shared/alerts') %>
					
					<div id=<%= view_id_name %> >
						  <%= yield %>
					</div>	  
	        	</div>
	        </div>
		</div>
	<% end %>

</div>

