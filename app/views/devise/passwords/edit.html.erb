<% content_for :title, "Смена пароля" %>

<%
	input_html = {:class => "form-control  "}
	link_to_html = {:class => "btn btn-link", :type => 'button'}
	submit_html = {:class => "btn btn-primary"}
	label_html = {:class => "control-label "}
%>


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, :class => "edit_form" }) do |f| %>

   <% if !devise_error_messages!.blank? %>
	<div class="alert alert-warning alert-dismissible" role="alert">
		<button type="button" class="close" data-dismiss="alert">
			<span aria-hidden="true">&times;</span>
			<span class="sr-only">Close</span>
		</button>
		<%= devise_error_messages! %>
	</div>
  <% end %>

  <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) if current_user %>

  <%= f.hidden_field :reset_password_token %>

  <div class="row">
  	  <div class="col-xs-4"></div>
	  <div class="col-xs-4">
	  	<%= f.label :password, "New password", label_html %>
	    <%= f.password_field :password, {autofocus: true, autocomplete: "off"}.merge(input_html) %>
  	  </div>
  	  <div class="col-xs-4"></div>
  </div>

  <div class="row">
  	  <div class="col-xs-4"></div>
	  <div class="col-xs-4">
	  	<%= f.label :password_confirmation, "Confirm new password", label_html %>
	    <%= f.password_field :password_confirmation, {autocomplete: "off"}.merge(input_html) %>
  	  </div>
  	  <div class="col-xs-4"></div>
  </div>

  <div class="row">
  	  <div class="col-xs-4"></div>
	  <div class="col-xs-4">
  		<%= f.submit "Сменить пароль", submit_html %>
  	  </div>
  	  <div class="col-xs-4"></div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
