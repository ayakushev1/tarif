<%
	link_to_html = {:class => "btn btn-link", :type => 'button'}
%>

<%- if !current_user %>
  <%= link_to "Войти", demo_login_path, link_to_html %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Зарегистрироваться", new_registration_path(resource_name), link_to_html %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Забыли ваш пароль?", new_password_path(resource_name), link_to_html %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Не получили инструкции для подтверждения электронной почты?", new_confirmation_path(resource_name), link_to_html %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Не получили инструкции по разблокировки аккаунта?", new_unlock_path(resource_name), link_to_html %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Войти с помощью #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), link_to_html %><br />
  <% end -%>
<% end -%>
