<%
	link_to_html = {:class => "btn btn-link", :type => 'button'}
%>

<%- if !current_user %>
  <div class="row">
  	  <div class="col-xs-4"></div>
	  <div class="col-xs-4">
		  <%= link_to "Войти", login_path, link_to_html %>
  	  </div>
  	  <div class="col-xs-4"></div>
  </div>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="row">
  	  <div class="col-xs-4"></div>
	  <div class="col-xs-4">
		  <%= link_to "Зарегистрироваться", new_registration_path(resource_name), link_to_html %>
  	  </div>
  	  <div class="col-xs-4"></div>
  </div>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="row">
  	  <div class="col-xs-4"></div>
	  <div class="col-xs-4">
		  <%= link_to "Забыли ваш пароль?", new_password_path(resource_name), link_to_html %>
  	  </div>
  	  <div class="col-xs-4"></div>
  </div>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="row">
  	  <div class="col-xs-4"></div>
	  <div class="col-xs-4">
		  <%= link_to "Не получили инструкции для подтверждения электронной почты?", new_confirmation_path(resource_name), link_to_html %>
  	  </div>
  	  <div class="col-xs-4"></div>
  </div>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="row">
  	  <div class="col-xs-4"></div>
	  <div class="col-xs-4">
		  <%= link_to "Не получили инструкции по разблокировки аккаунта?", new_unlock_path(resource_name), link_to_html %>
  	  </div>
  	  <div class="col-xs-4"></div>
  </div>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <div class="row">
  	  <div class="col-xs-4"></div>
	  <div class="col-xs-4">
		  <%- resource_class.omniauth_providers.each do |provider| %>
		    <%= link_to "Войти с помощью #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), link_to_html %>
		  <% end -%>
  	  </div>
  	  <div class="col-xs-4"></div>
  </div>
<% end -%>
