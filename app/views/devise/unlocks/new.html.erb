<h2>Запрос на инструкции по разблокировке аккаунта</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) if current_or_guest_user.id != 0%>

  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true %></div>

  <div><%= f.submit "Вышлите инструкции по разблокировке аккаунта" %></div>
<% end %>

<%= render "devise/shared/links" %>
