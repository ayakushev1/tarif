<%
table.init do |t|
  t.caption = 'Tarif detail results'
  t.base_name = 'tarif_detail_results'
  t.current_id_name = 'service_category_name'
  t.pagination_per_page = 100
  t.id_name = 'service_category_name'#'service_category_tarif_class_id'
