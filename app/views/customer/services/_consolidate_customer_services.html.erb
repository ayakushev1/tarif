<legend>Consolidated customer services</legend>

<%= session[:current_id] if false %>
<%= params[:current_id] if false	 %>

<table id='consolidated_customer_services_table' class='table table-hover table-bordered table-condensed' >
  <thead>
    <tr>
      	<th>Customer</th><th>Phone number</th>
    </tr>
  </thead>

  <tbody>
    <% i=0; table.each do |item| %>
    <% phone_number = item.phone_number   %>
    <% current_class =( (phone_number == session[:current_id]['consolidated_customer_service_id']) ? 'class=current_table_raw' : ' '  ) %>
    
    <tr <%= "id=consolidated_customer_services_raw_#{i} raw_name=consolidated_customer_services_raw \
            action_name=#{customer_services_path} current_id_name=consolidated_customer_service_id #{current_class} value=#{phone_number}" %> >
        <td><%= (item.user.name if item.user ) %></td>
        <td><%= item.phone_number %></td>
    </tr>
    <% i += 1; end %>
  </tbody>
</table>