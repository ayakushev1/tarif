<%
form_item.init do |f|
  f.caption = 'Choose location'	
  f.action_on_submit = set_new_location_path	
  f.set_fields do |filtr_name| 
  [
  	[label(filtr_name, "country_id", "Country"),
  	 collection_select(filtr_name, "country_id", Category.countries, :id, :name, 
  	   {:include_blank => true, :selected => session[:filtr][filtr_name]["country_id"] }, {:action_name => new_location_path} )
  	],
  	[label(filtr_name, "region_id", "Region"),
  	 collection_select(filtr_name, "region_id", Category.regions.with_parent(session[:filtr][filtr_name]["country_id"]), :id, :name, 
  	   {:include_blank => true, :selected => session[:filtr][filtr_name]["region_id"] }, {:action_name => new_location_path} )
  	],
  	[label(filtr_name, ""),
  	 submit_tag("submit")
  	],
  ] 
  end
end
%>
