<%
if controller.current_user.id == 0
  msg = 'login'
else
  msg = 'Change user'
end

if session[:current_user]["country_name"]
  location = "Location: #{session[:current_user]['country_name']}"
  if session[:current_user]["region_name"]
  	location += ", #{session[:current_user]['region_name']}"
  end
end

%>

<div class="dropdown pull-right">
	<div class="">
		<a class="text-info" data-toggle="dropdown">
			Current user: <strong><%= controller.current_user.name %></strong>  <span class="caret"></span>
			<small><%=  location %></small>
		</a>
		<ul class="dropdown-menu">
			<li><%= link_to msg, login_path %></li>
			<li><%= link_to 'Log out', logout_path %></li>
			<li><%= link_to 'Change location', new_location_path %></li>
		</ul>
	</div>
</div>
