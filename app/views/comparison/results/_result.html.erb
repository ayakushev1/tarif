form_item.init do |fi|
  link_to_html = {:class => "btn btn-primary", :type =>"button", :remote => true}

  fi.set_fields do  |result| 
    [
      ['Название', result.name], 
      ['Описание сравнения операторов и тарифов', result.description], 
